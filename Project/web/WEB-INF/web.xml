<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>WeeklyTimeTableDisplayServlet</servlet-name>
        <servlet-class>controller.instructor.WeeklyTimeTableController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AttendStatusServlet</servlet-name>
        <servlet-class>controller.instructor.StatusController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InstuctorListClassServlet</servlet-name>
        <servlet-class>controller.instructor.ClassListController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TakeAttendanceServlet</servlet-name>
        <servlet-class>controller.instructor.TakeAttendanceController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.authentication.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentWeeklyTimeTableServlet</servlet-name>
        <servlet-class>controller.student.WeeklyTimeTableController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateAttendanceServlet</servlet-name>
        <servlet-class>controller.instructor.UpdateAttendanceController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>controller.authentication.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentCourseListServlet</servlet-name>
        <servlet-class>controller.student.CourseListController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentStatusControllerServlet</servlet-name>
        <servlet-class>controller.student.StatusController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewAttendanceServlet</servlet-name>
        <servlet-class>controller.instructor.ViewAttendanceController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WeeklyTimeTableDisplayServlet</servlet-name>
        <url-pattern>/instructor/weeklyTimeTable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AttendStatusServlet</servlet-name>
        <url-pattern>/instructor/status</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InstuctorListClassServlet</servlet-name>
        <url-pattern>/instructor/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TakeAttendanceServlet</servlet-name>
        <url-pattern>/instructor/takeAttendance</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentWeeklyTimeTableServlet</servlet-name>
        <url-pattern>/student/weeklyTimeTable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateAttendanceServlet</servlet-name>
        <url-pattern>/instructor/updateAttendance</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentCourseListServlet</servlet-name>
        <url-pattern>/student/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentStatusControllerServlet</servlet-name>
        <url-pattern>/student/status</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewAttendanceServlet</servlet-name>
        <url-pattern>/instructor/viewAttendance</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
